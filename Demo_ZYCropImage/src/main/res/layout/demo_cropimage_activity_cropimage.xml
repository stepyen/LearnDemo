<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <com.bz.common.widget.cropimage.BaseCropImageView
        android:id="@+id/image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom" />
    
    <LinearLayout 
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button 
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:textSize="@dimen/demo_cropimage_common_textsize_normal"
            android:text="@string/demo_cropimage_cropImage_cancel"
            />
        <Button 
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:textSize="@dimen/demo_cropimage_common_textsize_normal"
            android:text="@string/demo_cropimage_cropImage_confirm"
            />
    </LinearLayout>
    

</LinearLayout>
