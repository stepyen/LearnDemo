<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLl"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        style="@style/TextView_hint_tag"
        android:text="可见性 visibility "/>



    <com.stepyen.demo.viewbase.lifecycle.LifecycleView
        android:id="@+id/lifecycleView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        />

    <Button
        android:id="@+id/visible_btn"
        style="@style/CommonButton"
        android:text="visible"/>


    <Button
        android:id="@+id/invisible_btn"
        style="@style/CommonButton"
        android:text="invisible"/>

    <Button
        android:id="@+id/gone_btn"
        style="@style/CommonButton"
        android:text="gone"/>

    <TextView
        style="@style/TextView_hint_tag"
        android:text="添加移除视图"/>

    <RelativeLayout
        android:id="@+id/addOrRemoveRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.stepyen.demo.viewbase.lifecycle.LifecycleView
            android:id="@+id/addOrRemoveView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/colorPrimary"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/addBtn"
        style="@style/CommonButton"
        android:text="添加视图"/>

    <Button
        android:id="@+id/removeBtn"
        style="@style/CommonButton"
        android:text="移除视图"/>

    <Button
        android:id="@+id/removeAllBtn"
        style="@style/CommonButton"
        android:text="移除全部视图"/>






</LinearLayout>