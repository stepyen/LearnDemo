<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        style="@style/TextView_hint_tag"
        android:text="单指点击"/>

    <com.stepyen.demo.viewbase.gesture.GestureSingleTapView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        />



    <TextView
        style="@style/TextView_hint_tag"
        android:text="手势单击和点击事件的冲突"/>

    <com.stepyen.demo.viewbase.gesture.GestureSingleTapAndClickConflictView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        />

    <TextView
        style="@style/TextView_hint_tag"
        android:text="单指滑动"/>

    <com.stepyen.demo.viewbase.gesture.GestureSingleMoveView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        />

    <TextView
        style="@style/TextView_hint_tag"
        android:text="单指滑翔"/>

    <com.stepyen.demo.viewbase.gesture.GestureSingleScrollView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        />


    <TextView
        style="@style/TextView_hint_tag"
        android:text="双指点击"/>

    <com.stepyen.demo.viewbase.gesture.GestureDoubleTapView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        />

    <TextView
        style="@style/TextView_hint_tag"
        android:text="双指缩放"/>

    <com.stepyen.demo.viewbase.gesture.GestureDoubleScaleView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        />


</LinearLayout>