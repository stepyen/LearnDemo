<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        style="@style/TextView_hint_tag"
        android:text="View1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">


        <TextView
            android:id="@+id/view1TextView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/coral"
            android:gravity="center"
            android:text="view1TextView1" />

        <Button
            android:id="@+id/view1Button1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:layout_margin="20dp"
            android:text="view1Button1" />


        <TextView
            android:id="@+id/view1TextView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="60dp"
            android:background="@color/cadetblue"
            android:gravity="center"
            android:text="view1TextView2" />


    </RelativeLayout>

    <TextView
        style="@style/TextView_hint_tag"
        android:text="View2"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        >


        <Button
            android:id="@+id/view2Button1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="20dp"
            android:text="view2Button1" />


        <TextView
            android:id="@+id/view2TextView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="60dp"
            android:background="@color/cadetblue"
            android:gravity="center"
            android:text="view2TextView2"
            />


    </RelativeLayout>




    <Button
        android:id="@+id/view3Button1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="20dp"
        android:text="view3Button1" />




</LinearLayout>