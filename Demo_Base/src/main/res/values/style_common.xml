<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--TextView 提示标签-->
    <style name="TextView_hint_tag" parent="TextStyle">
        <item name="android:textColor">@color/xui_config_main_theme</item>
        <item name="android:textSize">@dimen/public_content</item>
        <item name="android:layout_marginLeft">@dimen/public_margin</item>
        <item name="android:layout_marginTop">@dimen/public_margin</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="View_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/public_line</item>
        <item name="android:background">@color/line</item>
    </style>

    <style name="TextStyle.common">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    
    <style name="CommonButton" parent="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#03A9F4</item>
        <item name="android:textColor">@color/white</item>

    </style>


    <style name="CommonDialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>


</resources>