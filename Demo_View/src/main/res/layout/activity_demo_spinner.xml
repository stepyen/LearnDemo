<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">



    <TextView
        style="@style/TextView_hint_tag"
        android:text="xml中绑定数据"/>

    <Spinner
        android:id="@+id/xmlBindDataSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/languages"
        />



    <TextView
        style="@style/TextView_hint_tag"
        android:text="代码中绑定数据"/>

    <Spinner
        android:id="@+id/codeBindDataSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        style="@style/TextView_hint_tag"
        android:text="自定义样式"/>

    <Spinner
        android:id="@+id/customStyleSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <TextView
        style="@style/TextView_hint_tag"
        android:text="样式：下拉菜单"/>

    <Spinner
        android:id="@+id/spinnerModeDropdownSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode ="dropdown"
        android:entries="@array/languages"
        />

    <TextView
        style="@style/TextView_hint_tag"
        android:text="样式：对话框"/>

    <Spinner
        android:id="@+id/spinnerModeDialogSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode ="dialog"
        android:entries="@array/languages"
        />


</LinearLayout>