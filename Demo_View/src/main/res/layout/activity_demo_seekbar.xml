<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">


    <TextView
        style="@style/TextView_hint_tag"
        android:text="简单使用" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/simpleSeekBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:secondaryProgress="70" />

    </FrameLayout>


    <TextView
        style="@style/TextView_hint_tag"
        android:text="padding 设置为0" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/aquamarine">

        <androidx.appcompat.widget.AppCompatSeekBar
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:padding="0dp"
            android:progressDrawable="@drawable/bg_seekbar_custom"
            android:secondaryProgress="70" />

    </FrameLayout>


    <TextView
        style="@style/TextView_hint_tag"
        android:text="自定义progress、thumb" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:max="100"
        android:progressDrawable="@drawable/bg_seekbar_custom"

        android:secondaryProgress="70"
        android:thumb="@drawable/icon_flower" />


    <TextView
        style="@style/TextView_hint_tag"
        android:text="设置进度条高度" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:max="100"
        android:maxHeight="6dp"
        android:minHeight="6dp"

        android:progressDrawable="@drawable/bg_seekbar_custom"
        android:secondaryProgress="70"
        android:thumb="@drawable/icon_flower" />


    <TextView
        style="@style/TextView_hint_tag"
        android:text="设置滑块不分割进度条" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:max="100"
        android:maxHeight="6dp"
        android:minHeight="6dp"
        android:progressDrawable="@drawable/bg_seekbar_custom"
        android:secondaryProgress="70"
        android:splitTrack="false"

        android:thumb="@drawable/icon_flower" />

    <TextView
        style="@style/TextView_hint_tag"
        android:text="去除滑块拖动时，四周出现的阴影" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:duplicateParentState="true"
        android:max="100"
        android:maxHeight="6dp"
        android:minHeight="6dp"
        android:progressDrawable="@drawable/bg_seekbar_custom"
        android:secondaryProgress="70"
        android:splitTrack="false"

        android:thumb="@drawable/icon_flower" />


    <TextView
        style="@style/TextView_hint_tag"
        android:text="设置滑块的水平方向偏移量为 15" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:duplicateParentState="true"
        android:max="100"
        android:maxHeight="6dp"
        android:minHeight="6dp"
        android:progressDrawable="@drawable/bg_seekbar_custom"
        android:secondaryProgress="70"
        android:splitTrack="false"
        android:thumb="@drawable/icon_flower"
        android:thumbOffset="15dp" />


</LinearLayout>