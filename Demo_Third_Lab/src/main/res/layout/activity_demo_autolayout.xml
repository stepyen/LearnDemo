<?xml version="1.0" encoding="utf-8"?>
<com.superdo.magina.autolayout.widget.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">


    <TextView
        style="@style/TextView_hint_tag"
        android:text="XML 实现" />

    <TextView
        style="@style/TextView_hint_tag"
        android:text="测试 padding ImageView" />

    <com.superdo.magina.autolayout.widget.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/aquamarine"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_house"

            app:auto_padding_left="20"
            app:auto_padding_right="20" />

    </com.superdo.magina.autolayout.widget.AutoLinearLayout>

    <TextView
        style="@style/TextView_hint_tag"
        android:text="测试 padding AutoTextView" />

    <com.superdo.magina.autolayout.widget.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/aquamarine"
        android:orientation="horizontal">

        <com.superdo.magina.autolayout.widget.AutoTextView
            android:id="@+id/privacyAgreementTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐私政策"
            app:auto_padding_top="30" />
    </com.superdo.magina.autolayout.widget.AutoLinearLayout>


    <TextView
        style="@style/TextView_hint_tag"
        android:text="测试 padding AutoFrameLayout" />

    <com.superdo.magina.autolayout.widget.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/aquamarine"
        android:orientation="vertical">


        <com.superdo.magina.autolayout.widget.AutoFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:auto_padding_left="20"
            app:auto_padding_right="20">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_house" />

        </com.superdo.magina.autolayout.widget.AutoFrameLayout>

    </com.superdo.magina.autolayout.widget.AutoLinearLayout>


    <TextView
        style="@style/TextView_hint_tag"
        android:text="测试 margin" />

    <com.superdo.magina.autolayout.widget.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/aquamarine"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_house"
            app:auto_margin_left="20"
            app:auto_margin_right="20" />

    </com.superdo.magina.autolayout.widget.AutoLinearLayout>


    <TextView
        style="@style/TextView_hint_tag"
        android:text="代码实现" />

    <TextView
        style="@style/TextView_hint_tag"
        android:text="测试 padding ImageView" />

    <com.superdo.magina.autolayout.widget.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/aquamarine"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_test_padding_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_house" />

    </com.superdo.magina.autolayout.widget.AutoLinearLayout>


</com.superdo.magina.autolayout.widget.AutoLinearLayout>